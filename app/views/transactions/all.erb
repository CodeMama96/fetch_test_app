<br> <p style="font-size:35px">Here are your transactions!  </p>


    <table>
        <tr>
            <th>Payer</th>
            <th>Points</th>
            <th>Date</th>
        </tr>

        <% @transactions.each do |b|  %> 
        <tr>
       
        <td><%=b.payer %></td>
        <td><%=b.points %></td>
        <td><%=b.timestamp %></td> 
        
        </tr>
        <% end %>
    </table>


    <form method="POST" action="/transactions">
    <input type="hidden" name="_method" value="PUT">
    Add Points: <input type="text" name="transactions[points]" value="<%=@transactions.points%>"
    </input>

    </form>
     
     